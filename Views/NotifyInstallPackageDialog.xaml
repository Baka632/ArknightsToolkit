<ContentDialog
    x:Class="ArknightsToolkit.Views.NotifyInstallPackageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ArknightsToolkit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="using:System"
    xmlns:viewmodels="using:ArknightsToolkit.ViewModels"
    Title="需要安装包才能使用该功能"
    d:DataContext="{d:DesignInstance Type=viewmodels:NotifyInstallPackageDialogViewModel}"
    CloseButtonText="确定"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock Text="{x:Bind sys:String.Format('你需要包{0}', ViewModel.PackageName)}" />
        <!--<HyperlinkButton Margin="0,10,0,0" Padding="0" Content="前往Microsoft Store安装" NavigateUri="http://www.microsoft.com" />-->
        <TextBlock Text="注意,安装完成后将重新启动应用。" />
    </StackPanel>
</ContentDialog>
