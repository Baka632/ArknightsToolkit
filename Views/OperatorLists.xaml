<Page
    x:Class="ArknightsToolkit.Views.OperatorLists"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ArknightsToolkit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{x:Bind ViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="{x:Bind ViewModel.BackgroundImage,Mode=OneWay}" Opacity="0.6"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="50" Glyph="&#xE822;" />
            <TextBlock Margin="5" Style="{StaticResource SubheaderTextBlockStyle}" Text="Still working..." />
        </StackPanel>
    </Grid>
</Page>
